#include <iostream>
using namespace std;

int main() {
    int n;
    cin >> n;

    int total = 2 * n;
    char disks[200];
    int moves = 0;

   
    for (int i = 0; i < total; i++) {
        if (i % 2 == 0)
            disks[i] = 'D';
        else
            disks[i] = 'L';
    }

    for (int pass = 0; pass < total; pass++) {
        for (int i = 0; i < total - 1; i++) {
            if (disks[i] == 'D' && disks[i + 1] == 'L') {
                char temp = disks[i];
                disks[i] = disks[i + 1];
                disks[i + 1] = temp;
                moves++;
            }
        }
    }

    for (int i = 0; i < total; i++) {
        cout << disks[i] << " ";
    }
    cout << "\nMoves: " << moves;

    return 0;
}
