#include <iostream>
#include <string>
#include <vector>
#include <fstream>
using namespace std;

class Node {
public:
    string word;
    Node* left;
    Node* right;
    int height;

    Node(string w) {
        word = w;
        left = nullptr;
        right = nullptr;
        height = 1;
    }
};

int height(Node* n) {
    return n ? n->height : 0;
}

int balancee(Node* n) {
    return n ? height(n->left) - height(n->right) : 0;
}

Node* rotateR(Node* y) {
    Node* x = y->left;
    Node* T2 = x->right;
    x->right = y;
    y->left = T2;
    y->height = max(height(y->left), height(y->right)) + 1;
    x->height = max(height(x->left), height(x->right)) + 1;
    return x;
}

Node* rotateL(Node* x) {
    Node* y = x->right;
    Node* T2 = y->left;
    y->left = x;
    x->right = T2;
    x->height = max(height(x->left), height(x->right)) + 1;
    y->height = max(height(y->left), height(y->right)) + 1;
    return y;
}

Node* insert(Node* root, const string& word) {
    if (!root) return new Node(word);

    if (word < root->word)
        root->left = insert(root->left, word);
    else if (word > root->word)
        root->right = insert(root->right, word);
    else
        return root;

    root->height = 1 + max(height(root->left), height(root->right));
    int balance = balancee(root);

    if (balance > 1 && word < root->left->word)
        return rotateR(root);

    if (balance < -1 && word > root->right->word)
        return rotateL(root);

    if (balance > 1 && word > root->left->word) {
        root->left = rotateL(root->left);
        return rotateR(root);
    }

    if (balance < -1 && word < root->right->word) {
        root->right = rotateR(root->right);
        return rotateL(root);
    }

    return root;
}

bool Start(const string& word, const string& prefix) {
    if (word.size() < prefix.size()) return false;
    for (size_t i = 0; i < prefix.size(); i++)
        if (word[i] != prefix[i])
            return false;
    return true;
}

void fprefix(Node* root, const string& prefix, vector<string>& results) {
    if (!root) return;
    fprefix(root->left, prefix, results);
    if (Start(root->word, prefix))
        results.push_back(root->word);
    fprefix(root->right, prefix, results);
}

int main() {
    Node* root = nullptr;

    ifstream file("C:\\Users\\Home\\source\\repos\\ConsoleApplication36\\x64\\Debug\\dictionary (4).txt");
    string word;
    while (file >> word) {
        root = insert(root, word);
    }

    string prefix;
    cout << "Type a word prefix: ";
    cin >> prefix;

    vector<string> suggestions;
    fprefix(root, prefix, suggestions);

    cout << "Suggestions:" << endl;
    for (const string& w : suggestions)
        cout << w << endl;

    return 0;
}
