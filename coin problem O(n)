#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    int n;
    cout << "Enter number of coins: ";
    cin >> n;

    srand(time(0));

    int cns[100];

    int norm = rand() % 10 + 1;

    for (int i = 0; i < n; i++)
        cns[i] = norm;

 
    int fi = rand() % n;

    bool heavier = rand() % 2;
    if (heavier)
        cns[fi] = norm + 1;
    else
        cns[fi] = norm - 1; 

    cout << "Coin weights: ";
    for (int i = 0; i < n; i++)
        cout << cns[i] << " ";
    cout << endl;

    if (heavier)
        cout << "Fake coin is heavier." << endl;
    else
        cout << "Fake coin is lighter." << endl;

    return 0;
}
