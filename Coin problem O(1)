#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int func(int left, int right) {
    if (left == right)
        return 0;
    if (left > right)
        return 1;
    else 
        return -1;
}

int main() {
    srand(time(0)); 

    int A, B, C;
    int nor = rand() % 10 + 1; 
    int fc = rand() % 3;    
    bool heavier = rand() % 2;      

    A = B = C = nor;

    if (fc == 0) {
        if (heavier)
            A = nor + 1;
        else
            A = nor - 1;
    }
    else if (fc == 1) {
        if (heavier)
            B = nor + 1;
        else
            B = nor - 1;
    }
    else {
        if (heavier)
            C = nor + 1;
        else
            C = nor - 1;
    }
    cout << "Coin weights: A=" << A << " B=" << B << " C=" << C << endl;

    int res1 = func(A, B);

    if (res1 == 0) {
        int res2 = func(C, A);

        if (res2 > 0)
            cout << "Fake coin is heavier." << endl;
        else
            cout << "Fake coin is lighter." << endl;
    }
    
    else {
        int res2 = func(A, C);

        if (res2 == 0) {
            int res3 = func(B, A);
            if (res3 > 0)
                cout << "Fake coin is heavier." << endl;
            else
                cout << "Fake coin is lighter." << endl;
        }
        else {
            if (res2 > 0)
                cout << "Fake coin is heavier." << endl;
            else
                cout << "Fake coin is lighter." << endl;
        }
    }

    return 0;
}

